@model CategoryItem

@{
    ViewData["Title"] = "CheckToDelete";
}

<center>
    <h1>CheckToDelete CategoryItem</h1>
    <br />
    <h3> are you sure that you want to delete this CategoryItem!!!!!</h3>
</center>
    <div class="row">
        <div class="col-12">
             <form asp-action="Delete" asp-controller="Category">
            <input hidden asp-for="Id" />
            <div class="form-group">
                <label asp-for="@Model.Title" class="col-form-label "></label>
                <input asp-for="@Model.Title" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.Description" class="col-form-label "></label>
                <input asp-for="@Model.Description" class="form-control" readonly />
            </div>
            <div class="form-group">
                <label asp-for="@Model.DateTimeItemReleased" class="col-form-label "></label>
                <input asp-for="@Model.DateTimeItemReleased" class="form-control" readonly />
            </div>
            <br />
            <center>
             <a asp-controller="CategoryItem" asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">Delete</a>
                <a asp-action="Index" asp-route-categoryId="@Model.CategoryId" class="btn btn-outline-danger">Back To List</a>
            </center>
            </form>
        </div>
    </div>
